---
import "@/styles/global.css"
import Sidebar from "@/components/Sidebar.astro"

const path = Astro.url.pathname
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width"
		/>
		<link
			rel="icon"
			type="image/svg+xml"
			href="/favicon.svg"
		/>
		<meta
			name="generator"
			content={Astro.generator}
		/>
		<title>MyHub</title>
	</head>
	<body class="bg-gray-50">
		<div class="flex w-full min-h-screen mb-10">
			<Sidebar />
			<main class="ml-[260px] w-full pl-10 pr-8 py-8">
				<slot />
			</main>
		</div>
	</body>
</html>
