---
import "@/styles/global.css"

const path = Astro.url.pathname
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width"
		/>
		<link
			rel="icon"
			type="image/svg+xml"
			href="/favicon.svg"
		/>
		<meta
			name="generator"
			content={Astro.generator}
		/>
		<title>MyHub</title>
	</head>
	<body class="bg-gray-50">
		<slot />
	</body>
</html>
